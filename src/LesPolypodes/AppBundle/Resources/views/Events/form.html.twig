<h3>Formulaire de création d'évènement</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}

		<div class="form-group">
			{{ form_label(form.name, "Nom de l'évènement", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			{{ form_errors(form.name) }}

			<div class="col-sm-4">
				{{ form_widget(form.name, {'attr': {'class': 'form-controle'}}) }}
			</div>
		</div>

		<div class="form-group">
		    {{ form_label(form.startDate, "Date de début", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		    {{ form_errors(form.startDate) }}
      		<div class="col-sm-4">
        		{{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
      		</div>
    	</div>

  		<div class="form-group">
      		{{ form_label(form.endDate, "Date de fin", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      		{{ form_errors(form.endDate) }}
      		<div class="col-sm-4">
        		{{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
      		</div>
   		</div>

  		<div class="form-group">
      		{{ form_label(form.description, "Description de l'évènement", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      		{{ form_errors(form.description) }}
      		<div class="col-sm-4">
        		{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
     		</div>
    	</div>

			{# {{ form_row(form.name) }}
			{{ form_row(form.startDate) }}
			{{ form_row(form.endDate) }}
			{{ form_row(form.description) }} #}
		
	{{ form_end(form) }}
</div>

